	journal = {Geoscientific Model Development},
	author = {Anderson, Daniel C. and Follette-Cook, Melanie B. and Strode, Sarah A. and Nicely, Julie M. and Liu, Junhua and Ivatt, Peter D. and Duncan, Bryan N.},
	month = aug,
	year = {2022},
