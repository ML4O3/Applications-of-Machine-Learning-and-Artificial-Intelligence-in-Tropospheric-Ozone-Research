@article{zong_deep_2024,
	title = {A {Deep} {Forest} {Algorithm} {Based} on {TropOMI} {Satellite} {Data} to {Estimate} {Near}-{Ground} {Ozone} {Concentration}},
	volume = {15},
	copyright = {https://creativecommons.org/licenses/by/4.0/},
