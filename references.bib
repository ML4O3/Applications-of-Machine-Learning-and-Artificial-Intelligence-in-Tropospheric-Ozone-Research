@article{shen_adaptive_2020,
	title = {An adaptive method for speeding up the numerical integration of chemical mechanisms in atmospheric chemistry models: application to {GEOS}-{Chem} version 12.0.0},
	volume = {13},
	issn = {1991-959X},
	shorttitle = {An adaptive method for speeding up the numerical integration of chemical mechanisms in atmospheric chemistry models},
	url = {https://gmd.copernicus.org/articles/13/2475/2020/},
	doi = {https://doi.org/10.5194/gmd-13-2475-2020},
	abstract = {{\textless}p{\textgreater}{\textless}strong class="journal-contentHeaderColor"{\textgreater}Abstract.{\textless}/strong{\textgreater} The major computational bottleneck in atmospheric chemistry models is the numerical integration of the stiff coupled system of kinetic equations describing the chemical evolution of the system as defined by the model chemical mechanism (typically over 100 coupled species). We present an adaptive method to greatly reduce the computational cost of that numerical integration in global 3-D models while maintaining high accuracy. Most of the atmosphere does not in fact require solving for the full chemical complexity of the mechanism, so considerable simplification is possible if one can recognize the dynamic continuum of chemical complexity required across the atmospheric domain. We do this by constructing a limited set of reduced chemical mechanisms (chemical regimes) to cover the range of atmospheric conditions and then pick locally and on the fly which mechanism to use for a given grid box and time step on the basis of computed production and loss rates for individual species. Application to the GEOS-Chem global 3-D model for oxidant–aerosol chemistry in the troposphere and stratosphere (full mechanism of 228 species) is presented. We show that 20 chemical regimes can largely encompass the range of conditions encountered in the model. Results from a 2-year GEOS-Chem simulation shows that our method can reduce the computational cost of chemical integration by 30\&thinsp;\%–40\&thinsp;\% while maintaining accuracy better than 1\&thinsp;\% and with no error growth. Our method retains the full complexity of the original chemical mechanism where it is needed, provides the same model output diagnostics (species production and loss rates, reaction rates) as the full mechanism, and can accommodate changes in the chemical mechanism or in model resolution without having to reconstruct the chemical regimes.{\textless}/p{\textgreater}},
	language = {English},
	number = {5},
	urldate = {2021-02-10},
	journal = {Geoscientific Model Development},
	author = {Shen, Lu and Jacob, Daniel J. and Santillana, Mauricio and Wang, Xuan and Chen, Wei},
	month = may,
	year = {2020},
	pages = {2475--2486},
}

@article{kelp_toward_2020,
	title = {Toward {Stable}, {General} {Machine}-{Learned} {Models} of the {Atmospheric} {Chemical} {System}},
	volume = {125},
	issn = {2169-897X},
	url = {https://doi.org/10.1029/2020JD032759},
	doi = {10.1029/2020JD032759},
	abstract = {Abstract Atmospheric chemistry models?components in models that simulate air pollution and climate change?are computationally expensive. Previous studies have shown that machine-learned atmospheric chemical solvers can be orders of magnitude faster than traditional integration methods but tend to suffer from numerical instability. Here, we present a modeling framework that reduces error accumulation compared to previous work while maintaining computational efficiency. Our approach is novel in that it (1) uses a recurrent training regime that results in extended ({\textgreater}1 week) simulations without exponential error accumulation and (2) can reversibly compress the number of modeled chemical species by {\textgreater}80\% without further decreasing accuracy. We observe an {\textasciitilde}260? speedup ({\textasciitilde}1,900? with specialized hardware) compared to the traditional solver. We use random initial conditions in training to promote general applicability across a wide range of atmospheric conditions. For ozone (concentrations ranging from 0?70 ppb), our model predictions over a 24-hr simulation period match those of the reference solver with median error of 2.7 and {\textless}19 ppb error across 99\% of simulations initialized with random noise. Error can be significantly higher in the remaining 1\% of simulations, which include extreme concentration fluctuations simulated by the reference model. Results are similar for total particulate matter (median error of 16 and {\textless}32 ?g/m3 across 99\% of simulations with concentrations ranging from 0?150 ?g/m3). Finally, we discuss practical implications of our modeling framework and next steps for improvements. The machine learning models described here are not yet replacements for traditional chemistry solvers but represent a step toward that goal.},
	number = {23},
	urldate = {2021-02-09},
	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Kelp, Makoto M. and Jacob, Daniel J. and Kutz, J. Nathan and Marshall, Julian D. and Tessum, Christopher W.},
	month = dec,
	year = {2020},
	keywords = {atmospheric chemical mechanism, chemical mechanism, machine learning, model emulation, surrogate model},
	pages = {e2020JD032759},
}

@article{keller_application_2019,
	title = {Application of random forest regression to the calculation of gas-phase chemistry within the {GEOS}-{Chem} chemistry model v10},
