	author = {Sayeed, Alqamah and Choi, Yunsoo and Eslami, Ebrahim and Jung, Jia and Lops, Yannic and Salman, Ahmed Khan and Lee, Jae-Bum and Park, Hyun-Ju and Choi, Min-Hyeok},
