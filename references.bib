	author = {Ortiz, Edison Y. and Keller, Christoph A. and Cardenas, Beatriz and Sáenz, Hugo E. and Wakabayashi, Ken. and Seddon, Jessica and Castillero, Eduardo and Retama, Armando and Hernandez, Luiz A. and Grajales, Freddy},
	month = nov,
	year = {2021},
	keywords = {Air Quality Forecast, Air Quality Modeling, Air quality, Atmospheric modeling, GEOS-CF, Machine Learning, Machine learning, Machine learning algorithms, Pollution, Predictive models, Urban areas},
	pages = {1--4},
}

@article{ojha_exploring_2021,
	title = {Exploring the potential of machine learning for simulations of urban ozone variability},
	volume = {11},
	issn = {2045-2322},
	url = {https://www.nature.com/articles/s41598-021-01824-z},
	doi = {10.1038/s41598-021-01824-z},
	abstract = {Machine learning (ML) has emerged as a powerful technique in the Earth system science, nevertheless, its potential to model complex atmospheric chemistry remains largely unexplored. Here, we applied ML to simulate the variability in urban ozone (O3) over Doon valley of the Himalaya. The ML model, trained with past variations in O3 and meteorological conditions, successfully reproduced the independent O3 data (r2 {\textasciitilde} 0.7). Model performance is found to be similar when the variation in major precursors (CO and NOx) were included in the model, instead of the meteorology. Further the inclusion of both precursors and meteorology improved the performance significantly (r2 = 0.86) and the model could also capture the outliers, which are crucial for air quality assessments. We suggest that in absence of high-resolution measurements, ML modeling has profound implications for unraveling the feedback between pollution and meteorology in the fragile Himalayan ecosystem.},
